<view class='top-menus'>
  <navigator>
    <image src='../../img/icon-go-black.png'></image>
    <text>返回首页</text>
  </navigator>
  <image class='head-img' src='../../img/headImg.jpg'></image>
  <view class='invite'><text>+</text><text>邀请</text></view>
  <view class='setting'>
    <image src='../../img/icon-settings.png'></image>
    <text>设置</text>
  </view>
</view>
<view class='item'>
  <image class='cover-img' src='../../img/cercle-cover.jpg'></image>
  <view class='title'>
    <text>我们的圈子</text>
    <image src='../../img/icon-edit.png'></image>
  </view>
  <view class='num-box'>
    <text class='num'>1 人</text>
    <text class='line'></text>
    <text class='num last-child'>0 张</text>
