  <button class='upload'>
    <image src='../../img/icon-upload.png'></image>
    <text>上传照片</text>
  </button>
  <button class='invite-btn'>
    <image src='../../img/icon-invite.png'></image>
    <text>邀请好友</text>
  </button>
</view>


