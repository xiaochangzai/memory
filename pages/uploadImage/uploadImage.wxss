/* pages/uploadImage/uploadImage.wxss */
.wrap{
  width: 100vw;
  min-height: 100vh;
  background-color: #eceff6;
  padding-top: 2vw;
}
.text-content{
  width: 100vw;
  height: 23.4vw;
  box-sizing: border-box;
  border-bottom: #c7c7c7 0.2vw solid;
  padding-left: 2.6vw;
  padding-top: 2.7vw;
  background-color: #ffffff;
}
.text-content image{
  width: 3.7vw;
  height: 3.9vw;
  display: block;
  float: left;
}
.text-content textarea{
  width: 87.8vw;
  height: 20.3vw;
  display: block;
  float: left;
  color: #000000;
  font-size: 3.3vw;
  line-height: 3.95vw;
  margin-left: 2.9vw;
}

.placeholder{
  color: #707070;
}
.location{
  height: 10.7vw;
  padding: 0 2.6vw;
  background-color: #ffffff;
  border-bottom: #cdcdcd 0.2vw solid;
}
.location image.icon-location{
  width: 3vw;
  height: 3.8vw;
  display: block;
  float: left;
  margin-top: 3.3vw;
}
.location text{
  width: 86.6vw;
  display: block;
  height: 10.7vw;
  line-height: 10.7vw;  
  font-size: 3.2vw;
  color: #747474;
  padding-left: 2.6vw;
  float: left;
}
.location image.go{
  display: block;
  height: 3.3vw;
  width: 1.8vw;
  float: right;
  margin-top: 3.7vw;
}
.asyc{
  border-bottom: unset;
  margin-bottom: 1.7vw;
}
.asyc image.icon-location{
  width: 3.5vw;
  height: 3vw;
}
.photos-box{
  width: 100vw;
  height: 112vw;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
  padding: 2.6vw 1.8vw 0 1.8vw;
}
.photos-box .add-box{
  width: 30.8vw;
  height: 30.8vw;
  box-sizing: border-box;
  border: #f5ec00 0.4vw solid;
  float: left;
  margin-top: 1vw;
  margin-left: 1vw;

}
.photos-box .add-box .add-circle{
  width: 12.2vw;
  height: 12.2vw;
  margin: 0 auto;
  margin-top: 3.9vw;
  background-color: #fee300;
  border-radius: 50% 50%;
  font-size: 7vw;
  text-align: center;
  color: #2b324d;
  line-height: 11vw;
}
.photos-box .add-box text{
  height: 5.2vw;
  color: #080808;
  font-size: 2.8vw;
  text-align: center;
  display: block;
  margin-top: 2.8vw;
}

.photos-box .image-box{
  width: 30.8vw;
  height: 30.8vw;
  overflow: hidden;
  float: left;
  margin-left: 1vw;
  margin-top: 1vw;
  position: relative;
}

.photos-box .image-box text{
  width: 4.6vw;
  height: 4.6vw;
  display: block;
  position: absolute;
  top: 1.6vw;
  right: 2vw;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 2vw 2vw;
  text-align: center;
  line-height: 3.5vw;
  color: #ffffff;
  transform: rotate(45deg);
  font-size: 5vw;
}
.photos-box .image-box image{
  width: inherit;
  height: inherit;
}
button.start{
  width: 94.7vw;
  height: 9vw;
  background-color: #fff073;
  color: #00001b;
  font-size: 3.6vw;
  border-radius: 1vw;
  position: absolute;
  bottom: 2.5vw;
  display: block;
  left:2.65vw;
}
button.start::after{
  border: unset;
}