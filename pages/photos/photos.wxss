/* pages/photos/photos.wxss */
.top{
  width: 100vw;
  height: 12.8vw;
  box-sizing: border-box;
  padding: 2vw 5vw 0 5.7vw;
  position: relative;
}
.top input{
  width: 81.4vw;
  height: 7.8vw;
  border-radius: 3.9vw;
  background-color: #eeeff4;
  color: #a1a0a5;
  line-height: 7.8vw;
  box-sizing: border-box;
  padding-left: 8vw;
  font-size: 2.4vw;
}
.top .image{
  width:2.8vw;
  height: 3.2vw;
  position: absolute;
  left: 8.3vw;
  top: 4.8vw;
}
.message{
  position: absolute;
  width: 6vw;
  height: 4.5vw;
  display: block;
  left: unset;
  right: 5vw;
  top: 3vw;
}
.big-title{
  height: 13vw;
  text-align: center;
  font-size: 7.7vw;
  font-weight: bold;
  color: #333333;
}
.small-tit{
  font-size: 3.5vw;
  color: #1a1a1a;
  text-align: center;
  height: 9.6vw;
}
.content-message{
  height: 4.4vw;
  color: #7f7f7f;
  text-align: center;
  font-size: 2.9vw;
}
.know-about{
  width: 64.2vw;
  height: 8.7vw;
  box-sizing: border-box;
  border: #a7a7a7 0.1vw solid;
  display: block;
  border-radius: 4.35vw;
  background-color: #ffffff;
  color: #979797;
  font-size: 3.4vw;
}

.know-about image{
  width: 4.3vw;
  height: 4.3vw;
  margin-right: 2.4vw;
  position: relative;
  top: 1.1vw;
}
.create-photos{
  width: 64.2vw;
  height: 8.7vw;
  display: block;
  border-radius: 4.35vw;
  background-color: #fde500;
  color: #353019;
  margin-top: 4.2vw;
  font-size: 3.4vw;
}
.create-photos text{
  display: block;
  float: left;
}
.create-photos image{
  width: 4.3vw;
  height: 4.1vw;
  display: block;
  float: left;
  margin-top: 2.5vw;
  margin-right: 2vw;
  margin-left: 17.7vw;
}
.adv{
  width:92.2vw;
  height: 12.4vw;
  margin: 0 auto;
  margin-top: 6.8vw;
}
.adv image{
  width: 92.2vw;
  height: 12.4vw;
}
.photos-item{
  width: 92.2vw;
  height: 42vw;
  overflow: hidden;
  border-radius: 1vw;
  margin: 0 auto;
  margin-top: 2.2vw;
  margin-bottom: 2.2vw;
  position: relative;
  display: block;
 
}
.photos-item image{
  width: inherit;
  height: inherit;
  display: block;
}
.photos-item .btm-tit{
  height: 7vw;
  width: 100%;
  box-sizing: border-box;
  padding-left: 2.6vw;
  color: #ffffff;
  font-size: 3vw;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  left: 0;
}
.photos-item .btm-tit .num{
  display: block;
  float: left;
}
.photos-item .btm-tit .view-num{
  height: 7vw;
  float: right;
  width: auto;
  display: block;
}
.photos-item .btm-tit .view-num text{
  padding: 0 2vw;
  display: block;
  float: right;
}
.photos-item .btm-tit .view-num image{
  width: 3.7vw;
  height: 3.3vw;
  margin-top: 0.5vw;
}