/* pages/my/my.wxss */
.header{
  width: 100%;
  height: 25vw;
  background-size: 100vw 25vw;
  position: relative;
}
.header .modal{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
}
.header .bg{
  width: 100vw;
  height: 25vw;
  position: absolute;
  top: 0;
  left: 0;
}
.header .modal .head-img{
  width: 16vw;
  height: 16vw;
  border-radius: 50%;
  background-color: #30a03b;
  display: block;
  float: left;
  margin-top: 4.5vw;
  margin-left: 4vw;
}
.header .modal .info-box{
  width:48.6vw;
  height:18.2vw;
  margin-top: 4.5vw;
  box-sizing: border-box;
  padding-left: 3.5vw;
  float: left;
}
.header .modal .info-box .title{
  color: #ffffff;
  font-size: 3.6vw;
  font-weight: bold;
  height: 5.5vw;
}
.header .modal .info-box .score{
  height: 6.3vw;
  font-size: 2.8vw;
  color: #ffffff;
}
.header .modal .info-box .score text{
  color: #ff6d6c;
  padding: 0 2.4vw;
}
.header .modal .info-box .score  navigator{
  width: 12.4vw;
  height:3.6vw;
  display: inline-block;
  box-sizing: border-box;
  border: #ffffff 0.2vw solid;
  text-align: center;
  line-height: 3.2vw;
  border-radius: 0.3vw;
}
.header .modal .info-box .used{
  height: 6.4vw;
  font-size: 2.8vw;
  color:#ffffff;
}
.header .modal button{
  height: 10vw;
  border-radius: 5vw;
  background-color: #999999;
  color: #ffffff;
  font-size: 3vw;
  display: block;
  float: left;
  margin-top: 7.4vw;
  line-height: 10vw;
}
.menu-item{
  width: 100vw;
  height: 11.5vw;
  line-height: 11.5vw;
  font-size: 3.5vw;
  color: #636363;
  box-sizing: border-box;
  padding-top: 3.6vw;
  padding-left: 4vw;
  padding-right: 3.7vw;
}
.menu-item image{
  float: left;
  width: 4.4vw;
  height: 4.3vw;
}
.menu-item image:last-child{
  float: right;
  width: 1.8vw;
  height: 3.1vw;
}
.menu-item text{
  display: block;
  float: left;
  line-height: 1;
  padding-left: 3.4vw;
}
.menu-item .new{
  width: 9vw;
  height: 3.5vw;
  line-height: 3.5vw;
  text-align: center;
  color: #ffffff;
  margin-left: 4.3VW;
  font-size: 3vw;
  display: block;
  float: left;
  background-color: #ff6967;
  padding: 0.5vw 1vw;
}
.line{
  width: 92.4vw;
  height: 0.2vw;
  background-color: #ebebeb;
  margin: 0 auto;
}
.pass-lock{
  height: 15vw;
   padding-top: 5.2vw; 
}
.pass-lock switch{
  float: right;
  position: relative;
  top: -5vw;
}
