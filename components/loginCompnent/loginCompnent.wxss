/* pages/loginCompnent/loginCompnent.wxss */
.modal-bg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
}
.inner-box{
  width: 82.6vw;
  height: 70.4vw;
  background-color: #ffffff;
  border-radius: 1vw;
  position: fixed;
  top: calc(50% - 35.2vw);
  left: 8.7vw;
}
.title{
  height: 13vw;
  line-height: 13vw;
  color: #070707;
  font-size: 4.4vw;
  text-align: center;
  box-sizing: border-box;
  border-bottom: #e1dfe2 0.2vw solid;
}
.user-head{
  width: 9.6vw;
  height: 9.6vw;
  border:#f1f2f2 0.3vw solid;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top: 5.2vw;
  display: block;
  border-radius: 50%;
}
.message{
  width: 66.4vw;
  margin: 0 auto;
  height: 13.3vw;
  line-height: 13.3vw;
  font-size: 3.9vw;
  border-bottom: #e9e7ea 0.2vw solid;
}
.list-item{
  width: 66.4vw;
  height: 12.4vw;
  box-sizing: border-box;
  padding-top: 4.3vw;
  color: #848484; 
  font-size: 3.4vw;
  margin: 0 auto;
}
.list-item text:first-child{
  width: 1.6vw;
  height: 1.6vw;
  display: inline-block;
  background-color: #818181;
  border-radius: 50%;
  margin-right: 2.6vw;
}
.btm-btns{
  height: 12.3vw;
  box-sizing: border-box;
  border-top: #e2e1e3 0.3vw solid;
  position: absolute;
  top: 58.1vw;
}
.btm-btns .btn-cancle{
  height: 11.9vw;
  width: 41.2vw;
  border: none;
  border-radius: unset;
  border-right: #e3e1e4 0.3vw solid;
  color: #343334;
  text-align: center;
  float: left;
  line-height: 11.9vw;
  background-clip: unset;
  display: block;
}
.btm-btns .btn-ok{
  height: 11.9vw;
  width: 41.2vw;
  float: left;
  border: unset;
  border-radius: unset;
  background-color: unset;
  color: #46bf3c;
  text-align: center;
  line-height: 11.9vw;
  display: block;
}
button::after{
  border: 0;
}
button{
  font-size: 3.8vw;
}
